@page
@model IndexModel
@{
    ViewData["Title"] = "Elasticsearch Results";
}

<h1>Elasticsearch Results</h1>

<form method="get">
    <input type="text" name="query" value="@Request.Query["query"]" placeholder="Search..." />
    <button type="submit">Search</button>
</form>
@if (Model.Documents != null && Model.Documents.Any())
{
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Link</th>
                    <th>Timestamp</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var doc in Model.Documents)
            {
                        <tr>
                            <td>@doc.Title</td>
                            <td><a href="@doc.Link" target="_blank">@doc.Link</a></td>
                            <td>@doc.Timestamp</td>
                        </tr>
            }
            </tbody>
        </table>
}
else
{
        <p>No documents found.</p>
}
